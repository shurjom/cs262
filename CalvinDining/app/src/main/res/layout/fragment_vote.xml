<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.calvin.kpb23students.calvindining.fragments.Vote"
    android:background="@android:color/holo_blue_dark"
    app:layout_scrollFlags="scroll">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Please Login To Vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="25sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">

            <TextView
                android:text="Commons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView74"
                android:textSize="30sp"
                android:textColor="@android:color/black" />

            <TextView
                android:text="Loading Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commonsQuestion"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/commonsRadioGroup">

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commons1"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commons2"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commons3"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commons4"
                    android:layout_weight="1" />

                <Button
                    android:text="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commonsButton"
                    android:layout_weight="1" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_green_light">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Knollcrest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView76"
                android:textSize="30sp"
                android:textColor="@android:color/black" />

            <TextView
                android:text="Loading Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/knollQuestion"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/knollRadioGroup">

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/knoll1"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/knoll2"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/knoll3"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/knoll4"
                    android:layout_weight="1" />

                <Button
                    android:text="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/knollButton"
                    android:layout_weight="1" />

            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
