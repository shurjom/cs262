<?xml version="1.0" encoding="utf-8"?>
<edu.calvin.kpb23students.calvindining.fragments.DailyView.TimeLabel xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <TextView
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beginTime"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorPrimary"
        android:padding="3dp" />

    <TextView
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:padding="5dp" />

    <TextView
        android:text="End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endTime"
        android:textColor="?android:attr/textColorPrimary"
        android:padding="3dp"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textColor="?android:attr/textColorPrimary"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:layout_marginLeft="20dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/beginTime"
        android:layout_alignParentStart="true" />
</edu.calvin.kpb23students.calvindining.fragments.DailyView.TimeLabel>